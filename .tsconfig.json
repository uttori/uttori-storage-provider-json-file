{
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "test/**/*.test.js"
  ],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "declaration": true,
    "downlevelIteration": true,
    "emitDeclarationOnly": true,
    "extendedDiagnostics": true,
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "noEmit": false,
    "sourceMap": true,
    "strict": false,
    "target": "esnext",
    "removeComments": false,
    "skipLibCheck": true,
    "declarationMap": true,
    "types": ["node"],
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@uttori"
    ]
  }
}

{
  "name": "uttori-storage-provider-json-file",
  "version": "2.4.1-pre",
  "description": "Uttori storage provider using JSON files on disk.",
  "author": "Matthew Callis <matthew.callis@gmail.com>",
  "contributors": [],
  "license": "MIT",
  "repository": "uttori/uttori-storage-provider-json-file",
  "homepage": "https://github.com/uttori/uttori-storage-provider-json-file",
  "keywords": [
    "uttori",
    "storage",
    "json"
  ],
  "engines": {
    "node": ">= 10.15.3"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "fs-extra": "^9.0.0",
    "ramda": "^0.27.0",
    "sanitize-filename": "^1.6.3",
    "uttori-utilities": "^2.3.0"
  },
  "devDependencies": {
    "ava": "^3.8.2",
    "coveralls": "^3.1.0",
    "docsify-cli": "^4.4.0",
    "eslint": "^7.1.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-plugin-ava": "^10.3.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-no-inferred-method-name": "^2.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-optimize-regex": "^1.2.0",
    "eslint-plugin-ramda": "^2.5.1",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^20.1.0",
    "eslint-plugin-xss": "^0.1.10",
    "jsdoc-to-markdown": "^6.0.1",
    "nyc": "^15.1.0",
    "sinon": "^9.0.2",
    "supertest": "^4.0.2",
    "uttori-document": "^1.4.1"
  },
  "files": [
    "src/*"
  ],
  "main": "src/index.js",
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "ignoredByWatcher": [
      "!src/**/*.js"
    ],
    "concurrency": 1,
    "failFast": false,
    "tap": false,
    "verbose": true
  },
  "nyc": {
    "cache": true,
    "all": true,
    "check-coverage": false,
    "include": [
      "src/**/*.js"
    ],
    "exclude": []
  },
  "scripts": {
    "docs": "jsdoc2md --private --example-lang js --template README.hbs src/storage-provider.js > README.md; cp README.md docs/README.md; jsdoc2md --private --example-lang js src/plugin.js > docs/plugin.md; jsdoc2md --private --example-lang js src/query-tools.js > docs/query-tools.md;",
    "docs-serve": "docsify init ./docs && docsify serve ./docs",
    "lint": "eslint .",
    "report": "nyc report --reporter=html",
    "test": "NODE_ENV=test nyc ava --serial --concurrency=1",
    "test-debug": "DEBUG=Uttori* NODE_ENV=test nyc ava --serial --concurrency=1",
    "validate": "npm ls"
  }
}
